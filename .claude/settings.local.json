{
  "permissions": {
    "allow": [
      "Bash(uv run:*)",
      "Bash(./run.sh)",
      "Bash(curl:*)",
      "Bash(open http://127.0.0.1:8000:*)",
      "Bash(chmod:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_hover"
    ]
  },
  "outputStyle": "Explanatory",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "say 'All done!'"
          }
        ]
      }
    ]
  }
}